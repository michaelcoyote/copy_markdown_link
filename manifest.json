{
  "manifest_version": 3,
  "name": "Copy Markdown Link",
  "version": "0.3",
  "description": "Copy page link as Markdown-formatted link to the clipboard.",
  "browser_specific_settings": {
    "gecko": {
      "id": "{fbe023b1-0615-5250-b8b2-f7d9719eb69c}",
      "strict_min_version": "139.0" 
    }
  },
  "permissions": [
    "tabs",
    "tabGroups",
    "activeTab",
    "contextMenus",
    "clipboardWrite"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
